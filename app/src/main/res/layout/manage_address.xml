<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:padding="10dp">

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:id="@+id/lol1"/>

    <TextView
        style=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tt_add_address"
        android:layout_below="@id/lol1"
        android:id="@+id/lol2"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#440404"
        android:typeface="serif">
    </TextView>

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@id/lol2"
        android:id="@+id/lmao1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lmao1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Adress ID"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/ID_fiscal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Adress ID"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_address_name"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/alias"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Alias"
                            android:inputType="text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ph_customerId"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/id_cust_address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Customer ID"
                            android:inputType="text" />
                    </LinearLayout> gran er√≥eccin como siemran

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/firstName"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/name_address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Client FirstName"
                            android:inputType="text" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lastName"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/lastname_address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Client LastName"
                            android:inputType="text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_company"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/company"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Company"
                            android:inputType="textCapWords" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_IVA"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/iva"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="% TVA"
                            android:inputType="number" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_address"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Adress"
                            android:inputType="textCapWords" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_cp"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/zip_code"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Postal Code"
                            android:inputType="number" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_city"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="City"
                            android:inputType="textCapWords" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_country"
                            android:layout_weight="1">
                        </TextView>
                        <Spinner
                            android:id="@+id/spinner_pais"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/country_arrays"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_state"
                            android:layout_weight="1">
                        </TextView>
                        <Spinner
                            android:id="@+id/spinner_estados"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/country_arrays"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_phone"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Phone number"
                            android:inputType="number" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style=""
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_mobile_phone"
                            android:layout_weight="1">
                        </TextView>

                        <EditText
                            android:id="@+id/mobile"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Mobile phone number"
                            android:inputType="number" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <Button
                    android:id="@+id/bn_retrieve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="retrieveSampleData"
                    android:text="@string/bt_get"
                    android:background="@drawable/custom_button"
                    android:textColor="#fff"/>

                <Button
                    android:id="@+id/bn_put"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="putData"
                    android:text="@string/bt_put"
                    android:background="@drawable/custom_button"
                    android:textColor="#fff"/>

                <Button
                    android:id="@+id/bn_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="postData"
                    android:text="@string/bt_post"
                    android:background="@drawable/custom_button"
                    android:textColor="#fff"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/bn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="deleteData"
                    android:text="@string/bt_del"
                    android:background="@drawable/custom_button"
                    android:textColor="#fff"/>

                <Button
                    android:id="@+id/bn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="clearControls"
                    android:text="@string/bt_clear"
                    android:background="@drawable/custom_button"
                    android:textColor="#fff"/>

            </TableRow>
        </LinearLayout>
    </ScrollView>

</TableLayout>